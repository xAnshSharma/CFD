FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      turbulenceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

simulationType  LES;

LES
{
    LESModel        WALE;          // or Smagorinsky, oneEqEddy, kEqn, dynSmagorinsky
    turbulence      on;
    printCoeffs     on;

    delta           cubeRootVol;   // grid filter
    cubeRootVolCoeffs
    {
        deltaCoeff  1;             // 0.8â€“1.2 typical
    }

    // Optional (defaults usually fine):
    // WALECoeffs { Cw 0.325; }     // only if you want to override
}

