FoamFile
{
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


// --- 1. Mug Body ---
mug_body.stl
{
extractionMethod extractFromSurface;
extractFromSurfaceCoeffs
{
includedAngle 150;
}
subsetFeatures
{
nonManifoldEdges yes; // Useful for complex geometry like the mug body
openEdges yes;
}
writeObj yes; // Optional: Writes out the features as an .obj file for viewing
outputFile "mug_body.eMesh"; // Essential for snappyHexMesh reference
}

// --- 2. Mug Lid (Hot Surface) ---
mug_lid.stl
{
extractionMethod extractFromSurface;
extractFromSurfaceCoeffs
{
includedAngle 150;
}
subsetFeatures
{
nonManifoldEdges no; // Not needed for a simple lid face
openEdges yes;
}
writeObj yes;
outputFile "mug_lid.eMesh"; // Essential for snappyHexMesh reference
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
