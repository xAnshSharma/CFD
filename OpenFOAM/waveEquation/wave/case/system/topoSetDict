actions
(
    // wave
    {
        name    waveCellSet;
        type    cellSet;
        action  new;
        source  boxToCell;
        sourceInfo
        {
            box (2 0 0 )(3 0.1 0.1); // box
        }
    }

    {
        name    wave;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set waveCellSet;
        }
    }
);


