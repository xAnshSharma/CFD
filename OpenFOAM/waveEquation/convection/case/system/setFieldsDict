FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Set the default value for the entire field first
defaultFieldValues
(
    volVectorFieldValue U (0 0 0)
);

// Specify regions to overwrite the default value
regions
(
    boxToCell
    {
        box (2 0.3 0) (3 0.7 0.1);
        fieldValues
        (
            // Corrected syntax for the vector field U
            volVectorFieldValue U (2 0 0)
        );
    }
);

